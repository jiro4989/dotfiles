#!/bin/bash

set -eu

SCRIPT_NAME="$(basename "${BASH_SOURCE:-$0}")"
readonly SCRIPT_NAME

main() {
  local file_ext=""
  while ((0 < $#)); do
    local opt=$1
    shift
    case "$opt" in
      -h | --help)
        usage
        return
        ;;
      *)
        file_ext=".$opt"
        break
        ;;
    esac
  done

  local file_name
  file_name="$(mktemp --dry-run)$file_ext"

  "$EDITOR" "$file_name"
  if [[ -e "$file_name" ]]; then
    twty -ff "$file_name"
  fi
}

usage() {
  cat << EOS
$SCRIPT_NAME はVimからTwitterにつぶやく。

Usage:
    $SCRIPT_NAME [options] [extension]

Options:
    -h, --help    このヘルプを出力する
EOS
}

main ${1+"$@"}
exit $?
